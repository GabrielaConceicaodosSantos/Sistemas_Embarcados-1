#include <iostream>
#include "Display.h"
using namespace std;

int main(){

	Display display;
	display.Setup();
	display.Print("To com sono!!!!");

	char entrada;
	cout << "Digite \"sair\" para sair do programa." << endl;
	while(1){
		cin >> entrada;
		if(strncmp(entrada,"sair",4) == 0){
			break;
		}
		else{
			display.Print("");
		}
	}

	cout << "Saindo do programa." << endl;

	return 0;
}
