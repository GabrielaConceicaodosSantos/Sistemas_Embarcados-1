void Tomar_Decisao(struct Decisao *decisao) {

	if (decisao->opcao == 0) {
		if(decisao->navegar == 0){
			decisao->opcao = 1;
		}
		else if(decisao->selecionar == 0){
			decisao->opcao = 2;
		}
	}

	else if(decisao->opcao == 1){
		if(decisao->navegar == 0){
			decisao->opcao = 0;
		}
		else if(decisao->selecionar == 0){
			decisao->opcao = 7;
		}
	}

}
