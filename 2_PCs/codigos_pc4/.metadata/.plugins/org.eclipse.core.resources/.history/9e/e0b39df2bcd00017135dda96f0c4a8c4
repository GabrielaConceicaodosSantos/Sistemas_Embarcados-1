#ifndef DISPLAY_H_
#define DISPLAY_H_

#include <iostream>
using namespace std;
#include <string.h>
#include <fcntl.h>
#include <unistd.h>

/* DISPLAY	GPIO
 * RS		2
 * RW		3
 * E		4
 * DB0		17
 * DB1		27
 * DB2		22
 * DB3		10
 * DB4		9
 * DB5		11
 * DB6		5
 * DB7		6
 */

class Display {
private:
	int fd;
	char GPIOs[] = {'2','3','4','17','27','22','10','9','11','5','6','\0'};
	int GPIOs_value[10];
public:
	Display();
	virtual ~Display();
	void Setup(void);
};

#endif /* DISPLAY_H_ */
